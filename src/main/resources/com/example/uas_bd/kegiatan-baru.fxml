<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.uas_bd.KegiatanBaruController"
      spacing="10" alignment="CENTER" prefWidth="400" prefHeight="500">

    <children>
        <Label text="Tambah Kegiatan Baru" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

        <!-- TANPA idKegiatanField karena auto increment -->

        <TextField fx:id="namaKegiatanField" promptText="Nama Kegiatan" />
        <TextField fx:id="lokasiField" promptText="Lokasi" />

        <DatePicker fx:id="tanggalPicker" />
        <TextField fx:id="waktuMulaiField" promptText="Waktu Mulai (HH:mm)" />
        <TextField fx:id="waktuSelesaiField" promptText="Waktu Selesai (HH:mm)" />

        <Button text="Simpan Kegiatan" onAction="#handleSimpan" />
    </children>

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
</VBox>
