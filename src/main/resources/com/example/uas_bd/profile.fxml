<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox fx:controller="com.example.uas_bd.ProfileController"
      xmlns="http://javafx.com/javafx/22.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      prefHeight="400.0" prefWidth="600.0">

    <children>
        <fx:include source="navbar.fxml"/>

        <ScrollPane fitToWidth="true"
                    vbarPolicy="AS_NEEDED"
                    hbarPolicy="NEVER"
                    prefHeight="400.0" prefWidth="480.0">
            <content>
                <AnchorPane fx:id="profilePane" prefHeight="800.0" prefWidth="480.0">
                    <children>
                        <VBox spacing="15.0" layoutX="30.0" layoutY="30.0"
                              prefWidth="420.0"
                              style="-fx-background-color: #ffffff; -fx-padding: 20; -fx-background-radius: 10; -fx-border-color: #cccccc; -fx-border-radius: 10;">
                            <children>
                                <Label text="Profil Mahasiswa" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

                                <Label text="NRP: 72230000" fx:id="nrpLabel"/>
                                <Label text="Nama: John Doe" fx:id="namaLabel"/>
                                <Label text="Email: john.doe@example.com" fx:id="emailLabel"/>
                                <Label text="Program: Sarjana" fx:id="programLabel"/>
                                <Label text="Prodi: Teknik Informatika" fx:id="prodiLabel"/>
                            </children>
                        </VBox>
                    </children>
                </AnchorPane>
            </content>
        </ScrollPane>
    </children>
</HBox>
