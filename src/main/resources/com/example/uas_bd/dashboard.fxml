<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox xmlns="http://javafx.com/javafx/22.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.uas_bd.DashboardController"
      prefWidth="800.0" prefHeight="600.0" spacing="0">

    <children>
        <!-- Sidebar -->
        <fx:include source="navbar.fxml"/>

        <!-- Main Content -->
        <AnchorPane prefWidth="680.0" prefHeight="600.0" style="-fx-background-color: #f9f9f9;">
            <children>
                <GridPane layoutX="30.0" layoutY="30.0" hgap="20.0" vgap="20.0">
                    <!-- Profile Card -->
                    <VBox spacing="10.0" style="-fx-background-color: #b3e5fc; -fx-padding: 20; -fx-background-radius: 10;"
                          prefWidth="300.0" prefHeight="200.0" GridPane.rowIndex="0" GridPane.columnIndex="0">
                        <Button text="Lihat Profil" onAction="#handleLihatProfil"
                                style="-fx-font-weight: bold;" />
                    </VBox>

                    <!-- Kegiatan Card -->
                    <VBox spacing="10.0" style="-fx-background-color: #ffe0b2; -fx-padding: 20; -fx-background-radius: 10;"
                          prefWidth="300.0" prefHeight="200.0" GridPane.rowIndex="0" GridPane.columnIndex="1">
                        <Button text="Kegiatan (Coming Soon)" disable="true" />
                    </VBox>

                    <!-- Sertifikat Card -->
                    <VBox spacing="10.0" style="-fx-background-color: #d1c4e9; -fx-padding: 20; -fx-background-radius: 10;"
                          prefWidth="300.0" prefHeight="200.0" GridPane.rowIndex="1" GridPane.columnIndex="0">
                        <Button text="Sertifikat (Coming Soon)" disable="true" />
                    </VBox>

                    <!-- Kosong -->
                    <VBox spacing="10.0" style="-fx-background-color: #ef9a9a; -fx-padding: 20; -fx-background-radius: 10;"
                          prefWidth="300.0" prefHeight="200.0" GridPane.rowIndex="1" GridPane.columnIndex="1">
                        <Button text="Coming Soon" disable="true" />
                    </VBox>
                </GridPane>
            </children>
        </AnchorPane>
    </children>
</HBox>
